<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Hello World Servlet</display-name>

    <servlet>
        <servlet-name>getHelloWorldServlet</servlet-name>
        <servlet-class>ru.academits.kim.getHelloWorldServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>postHelloWorldServlet</servlet-name>
        <servlet-class>ru.academits.kim.postHelloWorldServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>getHelloWorldServlet</servlet-name>
        <url-pattern>/get/hello</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>postHelloWorldServlet</servlet-name>
        <url-pattern>/post/hello</url-pattern>
    </servlet-mapping>
</web-app>